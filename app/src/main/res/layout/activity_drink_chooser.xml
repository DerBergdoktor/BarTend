<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_color"
    tools:context="com.example.fabian.bartend.DrinkChooser">

    <Button
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_marginBottom="-9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/drinkButton"
        android:layout_alignBottom="@+id/drinkViewer"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:scaleX="0.31"
        android:scaleY="0.31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/filterButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-13dip"
        android:layout_marginRight="-18dip"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:scaleX="0.31"
        android:scaleY="0.31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/tippButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-13dip"
        android:layout_marginLeft="-18dip"
        />

    <android.support.v4.view.ViewPager

        android:id="@+id/drinkViewer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"


        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></android.support.v4.view.ViewPager>


</RelativeLayout>
