<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_color"
    tools:context="com.example.fabian.bartend.InfoBoxBitters">

    <ScrollView
        android:id="@+id/SCROLLER"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_margin="-50dp"
        >
        <TextView
            android:id="@+id/header"
            android:text="Bitters"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:textSize="50dp"
            android:textColor="@color/text_color"
            />
            <TextView
                android:id="@+id/infoText1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textSize="20dp"
                android:textColor="@color/text_color"
                />

            <ImageView
                android:layout_width="750px"
                android:layout_height="750px"
                android:id="@+id/infoPic1"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />

            <TextView
                android:id="@+id/infoText2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textSize="20dp"
                android:textColor="@color/text_color"
                />

            <ImageView
                android:layout_width="750px"
                android:layout_height="750px"
                android:id="@+id/infoPic2"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />

            <TextView
                android:id="@+id/infoText3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textSize="20dp"
                android:textColor="@color/text_color"
                />

        </TableLayout>


    </ScrollView>


</RelativeLayout>
