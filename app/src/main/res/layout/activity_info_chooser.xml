<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_color"
    tools:context="com.example.fabian.bartend.InfoChooser">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_sour"
        android:src="@drawable/sours"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="303dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_bitter"
        android:src="@drawable/bitters"
        android:layout_marginStart="187dp"
        android:layout_alignBottom="@+id/image_sour"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_sweet"
        android:src="@drawable/sweets"
        android:layout_below="@+id/image_bitter"
        android:layout_alignEnd="@+id/image_sour" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_spirit"
        android:src="@drawable/spirits"
        android:layout_below="@+id/image_bitter"
        android:layout_alignStart="@+id/image_bitter" />
</RelativeLayout>
